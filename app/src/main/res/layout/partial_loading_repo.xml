<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/paddingNormal"
    android:background="@drawable/bg_rounded_for_repo"
    android:padding="@dimen/spaceSpecial">


    <TextView
        android:id="@+id/tv_title_repo_loading"
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_rounded_black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description_loading"
        android:layout_width="@dimen/sizeAuto"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/spaceMax"
        android:background="@drawable/bg_rounded_black"
        android:textSize="20sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_repo_loading" />


    <TextView
        android:id="@+id/tv_language_loading"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/spaceMax"
        android:background="@drawable/bg_rounded_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_loading" />

    <TextView
        android:id="@+id/tv_branch"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/spaceMax"
        android:background="@drawable/bg_rounded_black"
        android:textSize="@dimen/text_detail_repo"
        app:layout_constraintBottom_toBottomOf="@+id/tv_star_loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_language_loading" />

    <TextView
        android:id="@+id/tv_star_loading"
        android:layout_width="38dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/spaceMax"
        android:background="@drawable/bg_rounded_black"
        android:drawablePadding="@dimen/paddingMin"
        android:textSize="@dimen/text_detail_repo"
        app:layout_constraintBottom_toBottomOf="@+id/tv_watcher"
        app:layout_constraintStart_toEndOf="@+id/tv_branch"
        app:layout_constraintTop_toTopOf="@+id/tv_watcher" />

    <TextView
        android:id="@+id/tv_watcher"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/spaceMax"
        android:background="@drawable/bg_rounded_black"
        android:drawablePadding="@dimen/paddingMin"
        android:textSize="@dimen/text_detail_repo"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fork_loading"
        app:layout_constraintStart_toEndOf="@+id/tv_star_loading"
        app:layout_constraintTop_toTopOf="@+id/tv_fork_loading"
       />


    <TextView
        android:id="@+id/tv_fork_loading"
        android:layout_width="34dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/spaceMax"
        android:background="@drawable/bg_rounded_black"
        android:drawablePadding="@dimen/paddingMin"
        android:textSize="@dimen/text_detail_repo"
        app:layout_constraintBottom_toBottomOf="@+id/tv_size_loading"
        app:layout_constraintStart_toEndOf="@+id/tv_watcher"
        app:layout_constraintTop_toTopOf="@+id/tv_size_loading"
         />

    <TextView
        android:id="@+id/tv_size_loading"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/spaceMax"
        android:background="@drawable/bg_rounded_black"
        android:drawablePadding="@dimen/paddingMin"
        android:textSize="@dimen/text_detail_repo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />


</androidx.constraintlayout.widget.ConstraintLayout>