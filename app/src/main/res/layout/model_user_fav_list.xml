<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_fav_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/paddingNormal"
    android:foreground="@drawable/ripple_for_third_black"
    android:background="@drawable/bg_rounded_for_repo"
    android:padding="@dimen/spaceSpecial">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_avatar_fav"
        style="@style/avatar.detail"
        app:strokeColor="@color/white"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name_fav"
        android:layout_width="@dimen/sizeAuto"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spaceSpecial"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/nameSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_avatar_fav"
        tools:text="@tools:sample/first_names" />


    <TextView
        android:id="@+id/tv_username_fav"
        android:layout_width="@dimen/sizeAuto"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingMin"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/usernameDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_fav"
        tools:text="@tools:sample/last_names" />


</androidx.constraintlayout.widget.ConstraintLayout>