<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_black</item>
        <item name="colorPrimaryVariant">@color/ripple_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>

    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/primary_black</item>
    </style>


    <style name="avatar">
        <item name="android:padding">5dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/circle</item>
    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded">
        <item name="cornerSize">20%</item>
    </style>

    <style name="avatar.home">
        <item name="android:layout_height">@dimen/avatarSizeHome</item>
        <item name="android:layout_width">@dimen/avatarSizeHome</item>
        <item name="strokeWidth">@dimen/strokeSizeAvatarHome</item>

    </style>


    <style name="avatar.home.shimmer">
        <item name="strokeWidth">@dimen/sizeAuto</item>
    </style>

    <style name="avatar.detail">
        <item name="android:layout_height">@dimen/avatarSizeDetail</item>
        <item name="android:layout_width">@dimen/avatarSizeDetail</item>
        <item name="strokeWidth">@dimen/strokeSizeAvatarDetail</item>
    </style>

    <style name="avatar.detail.shimmer">
        <item name="strokeWidth">@dimen/sizeAuto</item>
    </style>


    <style name="TextTabLayout" parent="TextAppearance.Design.Tab">
        <item name="textSize">30sp</item>
        <item name="textColor">@color/blue_sky</item>
    </style>


    <style name="title_fragment">
        <item name="android:layout_width">@dimen/sizeAuto</item>
        <item name="android:layout_margin">@dimen/spaceMax</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_fragment</item>

    </style>
</resources>